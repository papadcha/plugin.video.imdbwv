<settings>
<category label="Display">
<setting id="english" label="English Titles" type="bool" default="false" />
<setting id="hide_duplicates" label="Hide Movies Already In Library" type="bool" default="false" />
<setting type="lsep" label="Sort Order"/>
<setting id="sort" type="enum" values="Default|A-Z|User Rating|Your Rating|Popularity|Votes|Release Date|Date Added" label="Sort" default="6"/>
<setting id="order" type="enum" values="Ascending|Descending" label="order" enable="!eq(-1,0)" default="1"/>
</category>
<category label="Automation">
<setting id="tv_past" label="TV Show Add Period" type="enum" values="Forever|Year|Month|Week" />
<setting id="duplicates" label="Allow Adding Duplicates to Library" type="bool" default="false" />
<setting id="update" label="Update Library after Add Watchlist to Libary" type="bool" default="true" />
<setting type="lsep" label="Automatic Updates"/>
<setting id="login_update" label="Update On Login" type="bool"  default="true"/>
<setting id="login_delay" label="Login Update Delay (minutes)" type="number"  default="2"/>
<setting id="subscription_update" type="bool" label="Enable Update Timer" default="true"/>
<setting id="subscription_timer" type="enum" values="2h|5h|10h|15h|24h" label="Update Frequency" enable="eq(-1,true)" default="2"/>
<setting id="update_tv" label="TV Shows" type="bool"  default="true"/>
<setting id="update_watchlists" label="Subscribed Watchlists" type="bool"  default="true"/>
<setting id="update_main" label="Update Kodi Library After Update" type="bool"  default="true"/>
<setting id="update_clean" label="Clean Kodi Library After Update" type="bool"  default="false"/>
<setting id="service_time" type="text" label="Service Time" default="2000-01-01 00:00:00" visible="false"/>

</category>
</settings>